<!-- src/main/resources/logback.xml -->

<configuration>

  <!-- Console Appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- File Appender -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>log/gateway.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS,Asia/Shanghai} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Logger Configuration -->
  <logger name="com.wisdomsky.dmp.gateway" level="WARN" additivity="false">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="FILE" />
  </logger>

  <logger name="com.wisdomsky.dmp.library" level="WARN">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="FILE" />
  </logger>

  <logger name="reactor.netty" level="WARN" />
  <logger name="org.springframework.http.server.reactive" level="WARN" />
  <logger name="org.springframework.web" level="WARN" />
  <logger name="org.springframework.security" level="WARN" />
  <logger name="org.springframework.cloud.gateway" level="WARN" />
  <logger name="java.sql.Connection" level="WARN" />
  <logger name="java.sql.Statement" level="WARN" />
  <logger name="java.sql.PreparedStatement" level="WARN" />

  <!-- Root Logger Configuration -->
  <root level="WARN">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="FILE" />
  </root>

</configuration>