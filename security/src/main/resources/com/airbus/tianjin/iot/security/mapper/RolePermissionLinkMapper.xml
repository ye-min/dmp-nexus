<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wisdomsky.dmp.security.mapper.RolePermissionLinkMapper">

   <!-- 11. bindRolePermission -->
   <insert id="bindRolePermission">
      insert into dmp_role_permission_link(role_id, permission_id)
      values (#{roleId}, #{permissionId})
   </insert>

   <!-- 12. unbindRolePermission -->
   <insert id="unbindRolePermission">
      delete from dmp_role_permission_link
      where role_id = #{roleId}
        and permission_id = #{permissionId}
   </insert>

</mapper>
