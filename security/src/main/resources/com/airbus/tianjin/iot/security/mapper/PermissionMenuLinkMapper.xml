<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wisdomsky.dmp.security.mapper.PermissionMenuLinkMapper">

   <!-- 11. bindMenuPermission -->
   <insert id="bindMenuPermission">
      insert into dmp_menu_permission_link(menu_id, permission_id)
      values (#{menuId}, #{permissionId})
   </insert>

   <!-- 12. unbindMenuPermission -->
   <insert id="unbindPermissionMenu">
      delete from dmp_menu_permission_link
      where menu_id = #{menuId}
        and permission_id = #{permissionId}
   </insert>
</mapper>
